extend type Query{
	getProduct(idProduct: Long!): Product
	getAllProducts: [Product]
}

extend type Mutation{
	saveProduct(product: ProductInput): Product
	updateStock(idProduct : Long, stock : Long): Product
	deleteProduct(idProduct : Long!): Boolean
}

type Product{
	idProduct: Long
	name: String
	stock: Long
	price: BigDecimal
}

input ProductInput{
	idProduct: Long
	name: String
	stock: Long
	price: BigDecimal
}